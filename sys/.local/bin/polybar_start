#!/bin/bash

# Terminate already running bar instances, wait until the processes have been shut down
killall -q polybar
while pgrep -u $UID -x polybar >/dev/null; do sleep 1; done

for m in $(polybar --list-monitors | cut -d":" -f1); do
    sleep 1; BG=$m polybar --reload background -c ~/.config/polybar/config.ini &
    sleep 1; FG=$m polybar --reload foreground -c ~/.config/polybar/config.ini &
done
